# =============================================================================
# SentinelRAG Environment Configuration Template
# Copy this file to Credentials/.env and update values accordingly.
# =============================================================================

# --- LLM CONFIGURATION (OLLAMA - LOCAL) ---
LLM_BASE_URL=http://localhost:11434
MODEL_NAME=gemma3:12b
LLM_PROVIDER=ollama
LLM_API_KEY=

# --- TOKEN BUDGETS & CONTEXT ---
MAX_INPUT_TOKENS=2048
MAX_OUTPUT_TOKENS=512
LLM_TEMPERATURE=0.0
LLM_TIMEOUT=600

# --- MULTI-MODEL ROUTING (Optional) ---
LIGHTWEIGHT_MODEL=gemma3:12b
LIGHTWEIGHT_MAX_TOKENS=512
HEAVY_MODEL=gemma3:12b
HEAVY_MAX_TOKENS=1024

# --- RETRIEVAL CONFIGURATION ---
RETRIEVAL_DENSE_TOP_K=50
RETRIEVAL_SPARSE_TOP_K=50
RETRIEVAL_HYBRID_ALPHA=0.7
RETRIEVAL_MMR_LAMBDA=0.5
RETRIEVAL_FINAL_TOP_K=3
RETRIEVAL_MIN_SCORE=0.3

# --- RERANKER CONFIGURATION ---
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
RERANKER_THRESHOLD=0.1
RERANKER_TOP_K=50
RERANKER_BATCH_SIZE=32
RERANKER_MIN_KEEP=3

# --- EMBEDDINGS CONFIGURATION ---
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024
EMBEDDING_BATCH=32
EMBEDDING_CACHE=true

# --- CHUNKING CONFIGURATION ---
CHUNK_SIZE=500
CHUNK_OVERLAP=100
CHUNK_MIN_SIZE=150
CHUNK_MAX_SIZE=1000

# --- MISC ---
MEMGPT_OVERFLOW_RATIO=0.80
LONGT5_MODEL=google/long-t5-tglobal-base
LONGT5_DEVICE=cuda
RANDOM_SEED=42
